  <h2>New User Signup </h2>

  <%= form_for(:user, :url => {:action => 'create'}) do |f| %>
    <table>
      <tr>
        <th>First Name</th>
        <td><%= f.text_field(:first_name) %></td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td><%= f.text_field(:last_name) %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= f.text_field(:email) %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= f.text_field(:password) %></td>
      </tr>
    </table>

      <%= submit_tag("Create Subject") %>

  <% end %>
